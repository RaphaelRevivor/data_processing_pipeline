[MASTER]
# Ignore generated or vendored code
ignore=tests,build,dist,__pycache__

[MESSAGES CONTROL]
# Disable noisy checks
disable=
    missing-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-instance-attributes,
    too-many-return-statements,
    too-many-branches,
    too-many-statements,
    too-many-lines,
    too-complex,
    invalid-name,
    redefined-outer-name,
    line-too-long,
    import-error

[FORMAT]
max-line-length=100

[REPORTS]
output-format=colorized
score=no